<Window x:Class="tryDataSet.NewEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tryDataSet"
        mc:Ignorable="d"
        Title="NewEmployeeWindow" Height="450" Width="300">
    <StackPanel Margin="10">
        <GroupBox Header="Add new Employee" Margin="10">
            <StackPanel>
                <TextBlock Text="Employee name"/>
                <TextBox x:Name="txtEmpName" Margin="0,0,0,10"/>
                <TextBlock Text="Salary"/>
                <TextBox x:Name="txtSalary" Margin="0,0,0,10" Height="100"/>
                <TextBlock Text="Title"/>

                <TextBox x:Name="txtTitle"  Margin="0,0,0,20" />
                <Button x:Name="btnSaveEmployee" Content="Save" Click="btnSaveEmployee_Click"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
